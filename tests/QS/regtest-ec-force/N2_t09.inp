&FORCE_EVAL
  METHOD Quickstep
  &DFT
#    &PRINT
#       &DERIVATIVES
#       &END
#    &END
    BASIS_SET_FILE_NAME GTH_BASIS_SETS
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    &MGRID
      CUTOFF 400
    &END MGRID
    &QS
      EPS_DEFAULT 1.E-14
    &END QS
    &ENERGY_CORRECTION
      ENERGY_FUNCTIONAL HARRIS
      HARRIS_BASIS HARRIS  
      &XC
        &XC_FUNCTIONAL PBE
        &END
      &END XC
    &END ENERGY_CORRECTION
    &SCF
      EPS_SCF 1.0E-8
      SCF_GUESS ATOMIC 
    &END
    &XC
       &XC_FUNCTIONAL  PBE0
       &END
    &END XC
    &POISSON
       PERIODIC NONE
       POISSON_SOLVER MT
    &END
  &END DFT
  &SUBSYS
    &CELL
      ABC 4.0 4.0 4.0
      PERIODIC NONE
    &END CELL
    &COORD
    N     0.400000     0.000000     0.511111    
    N    -0.400000     0.000000    -0.500000   
    &END COORD
    &KIND N
      BASIS_SET ORB SZV-GTH
      BASIS_SET HARRIS DZVP-GTH
      POTENTIAL GTH-PADE-q5
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PROJECT N2 
  RUN_TYPE GEO_OPT
  PRINT_LEVEL LOW
&END GLOBAL
&MOTION
  &GEO_OPT
     MAX_ITER 2
  &END
&END
